    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "simplestyle-js": "^2.5.0"
  },
  "targets": {
    "default": {
      "context": "node",
      "engines": {
        "node": "12"
      }
    }
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "clean:node_modules": "rm -rf ./node_modules",
    "build:parcel": "parcel build ./src/index.html --dist-dir dist",
